<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui_firma.firmaActivity"
    android:rowCount="3"
    android:columnCount="2"
    android:orientation="horizontal">

    <Button
        android:id="@+id/gelen_siparis_firma_button"
        android:onClick="gelenSiparislerActivity"
        android:text="Gelen Siparişler"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        android:background="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:textColor="@color/textColor"
        />

    <Button
        android:id="@+id/menu_guncelle_firma_button"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="restoranMenusuneGit"
        android:text="Menüyü Güncelle"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/textColor" />

    <Button
        android:id="@+id/bilgi_guncelle_firma_button"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textColor"
        android:text="Firma Bilgisini Güncelle/Değiştir"
        android:layout_row="1"
        android:layout_column="0"
        android:textAllCaps="false"
        android:onClick="firmaGuncelleGit"/>

    <TextView
        android:id="@+id/onay_bilgi_tv_firma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:background="@color/alternativeColor"
        android:text="Hesabınız admin tarafından henüz onaylanmadı!"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:drawableLeft="@drawable/ic_info_outline_light_24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:padding="5dp"
        android:textSize="18sp" />


</GridLayout>
