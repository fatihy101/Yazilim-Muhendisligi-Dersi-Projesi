<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/urun_ismi_liste"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textColor"
        android:paddingBottom="5.5dp"
        android:paddingTop="0.7dp"
        android:text="Ürün İsmi"/>

    <TextView
        android:id="@+id/urun_fiyat_liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textColor"
        android:text="10 TL"
      android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5.5dp"
        android:paddingTop="0.7dp"
        />

    <Button
        android:id="@+id/urun_azalt"
        android:text="-"
        android:layout_height="33dp"
        android:layout_width="30dp"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@android:color/holo_red_light"
        android:textColor="@color/textColor"

        />

    <TextView
        android:id="@+id/urun_sayac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="3"
        android:paddingLeft="15dp"
       android:paddingRight="15dp"
        android:paddingBottom="5.5dp"
        android:paddingTop="0.7dp"
        android:background="@color/colorPrimaryDark"
        android:text="0"
        android:textColor="@color/textColor"
        android:textSize="20sp" />
    <Button
        android:id="@+id/urun_arttir"
        android:text="+"
        android:layout_height="33dp"
        android:layout_width="30dp"
        android:layout_row="0"
        android:layout_column="4"
        android:background="@android:color/holo_red_light"
        android:textColor="@color/textColor"
        />

</GridLayout>